<MyGameLevel>

    <!--  *** be careful!! comma (,) is not a supported syntax!!  -->
    <!--  make sure there are no comma in between attributes -->
    <!--  e.g., do NOT do:  PosX="20", PosY="30" -->
    <!--  notice the "comma" between PosX and PosY: Syntax error! -->

    <!-- cameras -->
    <!-- Viewport: x, y, w, h -->
    <Camera CenterX="20" CenterY="60" Width="20" Viewport="0 0 1024 680" BgColor="0 0 1 1.0" />


    <!-- Squares Rotation is in degree -->
    <Square PosX="20" PosY="60" Width="5" Height="5" Rotation="30" Color="1 1 1 1" />
    <Square PosX="20" PosY="60" Width="2" Height="3" Rotation="0" Color="1 0 0 1" />
    <TextureSquare PosX="15" PosY="60" Width="3" Height="3" Rotation="-5" Color="1 0 0 0.3" Texture="assets/textures/minion_portal.png" />

    <TextureSquare PosX="25" PosY="60" Width="3" Height="3" Rotation="5" Color="0 0 0 0" Texture="assets/textures/minion_collector.jpg" />
    <!-- without tinting, alpha should be 0 -->
</MyGameLevel>